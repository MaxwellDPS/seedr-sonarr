# Seedr-Sonarr Proxy Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Seedr Authentication (Required - choose one method)
# =============================================================================

# Option 1: Email/Password (simple but less secure)
SEEDR_EMAIL=your_email@example.com
SEEDR_PASSWORD=your_seedr_password

# Option 2: Token (recommended - more secure, longer lasting)
# Get your token by running: seedr-sonarr auth
# SEEDR_TOKEN={"access_token": "...", "refresh_token": "...", ...}

# =============================================================================
# qBittorrent API Credentials
# =============================================================================
# These are the credentials Sonarr/Radarr will use to connect
# Change these for security!

USERNAME=admin
PASSWORD=adminadmin

# =============================================================================
# Server Configuration
# =============================================================================

# Port to run the proxy on (inside container is always 8080)
SEEDR_SONARR_PORT=8080

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Timezone
TZ=America/Los_Angeles

# =============================================================================
# Paths
# =============================================================================

# Directory where downloads will appear
# This should match what Sonarr/Radarr expects
DOWNLOAD_PATH=./downloads

# Config directory for persistent storage
CONFIG_PATH=./config
